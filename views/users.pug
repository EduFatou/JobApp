doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/styles.css")
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap' rel='stylesheet')
        title Users
    body
        include ./header.pug
        main
            h3.mainTitle User List
            section.usersCardContainer
                each user in users
                    article.cardUsers(data-userId=`${user.user_id}`)
                        div.divUser
                            p.bold Name:
                            p.pUser #{user.name}
                        div.divUser
                            p.bold Email:
                            p.pUser #{user.email}
                        div.divUser
                            p.bold Role:
                            p.pUser #{user.role}
                        div.cardButtonsUsers
                            button.goToEditUser.editUserButton.editButton(type='button' value=`${user.email}`)
                                <i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i>
                            button.deleteUserButton.deleteButton(type='button' value=`${user.email}`)
                                <i class="fa-solid fa-trash-can" style="color: #ffffff;"></i>

        include ./footer.pug

        script.
            const users = !{JSON.stringify(users)};
        script(src="/js/scripts.js")
